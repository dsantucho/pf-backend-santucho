<div>
  <div id="navbar"></div>
  <div class="container mx-auto my-8">
    <div class="bg-white shadow-md rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <img id="profilePicture" class="w-20 h-20 rounded-full" src="" alt="Profile Picture">
          <div>
            <h2 id="userName" class="text-2xl font-bold">User Name</h2>
            <p id="userEmail" class="text-gray-500">user@example.com</p>
          </div>
        </div>
      </div>
      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="fullName" class="block text-gray-700">Full Name</label>
          <input type="text" id="fullName" class="w-full p-2 border rounded" placeholder="Your Full Name" disabled>
        </div>
        <div>
          <label for="email" class="block text-gray-700">Email</label>
          <input type="text" id="email" class="w-full p-2 border rounded" placeholder="Your Email" disabled>
        </div>
        <div>
          <label for="age" class="block text-gray-700">Age</label>
          <input type="text" id="age" class="w-full p-2 border rounded" placeholder="Your Age" disabled>
        </div>
        <div>
          <label for="cart" class="block text-gray-700">Cart</label>
          <input type="text" id="cart" class="w-full p-2 border rounded" placeholder="Your Cart" disabled>
        </div>
        <div>
          <label for="role" class="block text-gray-700">Role</label>
          <input type="text" id="role" class="w-full p-2 border rounded" placeholder="Your Role" disabled>
        </div>
        <div>
          <label for="lastConnection" class="block text-gray-700">Last Connection</label>
          <input type="text" id="lastConnection" class="w-full p-2 border rounded" placeholder="Your Last Connection" disabled>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="text-xl font-bold mb-4">Upload Profile Picture</h3>
        <form id="uploadProfileImageForm" enctype="multipart/form-data">
          <div class="mb-4">
            <label for="profileImage" class="block text-gray-700">Profile Image</label>
            <input type="file" id="profileImage" name="profileImage" class="w-full p-2 border rounded">
          </div>
          <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Upload</button>
        </form>
      </div>
      <div class="mt-8">
        <h3 class="text-xl font-bold mb-4">Upload Documents</h3>
        <form id="uploadDocumentForm" enctype="multipart/form-data">
          <div id="documentInputs" class="space-y-4">
            <!-- Document inputs will be inserted here -->
          </div>
          <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Upload</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/js/profile.js"></script>
<script src="/js/navbar.js"></script>
