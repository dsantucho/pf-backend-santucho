<div class="container flex flex-col mt-10">
    <div id="bannerPersonalDataAdmin" class=" bg-slate-950 p-3 text-white"></div>
  <h1 class="  size-20 w-full text-6xl tracking-wide text-center underline uppercase font-sans">ADMIN VIEW ADD PRODUCTS</h1>
  <div class=" flex flex-row w-full mt-2">
    <div class=" flex flex-col w-1/3  bg-white rounded-sm p-3 m-3">
      {{!--FORM NEW PRODUCT --}}
      <h2 class=" w-full text-4xl tracking-wide text-center  font-sans underline ">Add a New Product</h2>
      <form id="productForm" onsubmit="return addProduct()" class="mt-5">
        <label for="title" class="block text-gray-700 text-sm font-bold my-2">Title:</label>
        <input type="text" id="title" name="title" required class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><br>

        <label for="description" class="block text-gray-700 text-sm font-bold my-2">Description:</label>
        <textarea id="description" name="description" required class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"></textarea><br>

        <label for="price" class="block text-gray-700 text-sm font-bold my-2">Price:</label>
        <input type="number" id="price" name="price" step="0.01" required class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><br>

        <label for="code" class="block text-gray-700 text-sm font-bold my-2">Code:</label>
        <input type="text" id="code" name="code" required class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><br>

        <label for="stock" class="block text-gray-700 text-sm font-bold my-2">Stock:</label>
        <input type="number" id="stock" name="stock" required class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><br>

        <label for="category" class="block text-gray-700 text-sm font-bold my-2">Category:</label>
        <input type="text" id="category" name="category" required class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><br>

        <label for="thumbnails" class="block text-gray-700 text-sm font-bold my-2">Thumbnails:</label>
        <input type="text" id="thumbnails" name="thumbnails" class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><br>

        <input type="submit" value="Submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mx-auto my-8">
      </form>
    </div>
    <div class=" flex flex-col p-3 m-3 w-2/3">
      {{!-- LIST PRODUCT --}}
      <h2 class="w-full text-4xl tracking-wide text-center  font-sans  underline">Lista de productos</h2>
      <div id = "pages" class="mt-5 flex flex-wrap justify-center"></div>
      <div id="productList" class="mt-5 flex flex-wrap justify-center"></div>
      <!-- Botones de paginaciÃ³n -->
      <div id ="pagination" class="flex justify-center mt-5"></div>
    </div>
  </div>
</div>


<script src="/js/adminView.js"></script>
